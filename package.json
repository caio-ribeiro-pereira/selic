{
  "name": "selic",
  "version": "0.1.4",
  "description": "A tiny lib to scrap brazilian's selic, ipca and cdi rates",
  "scripts": {
    "tsc": "tsc -p tsconfig-esm.json && tsc -p tsconfig-cjs.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "build": "rimraf dist && npm run tsc",
    "deploy": "npm run build && npm publish"
  },
  "main": "./dist/cjs/selic.js",
  "module": "./dist/esm/selic.js",
  "files": [
    "dist/"
  ],
  "author": "Caio Ribeiro Pereira",
  "license": "MIT",
  "engines": {
    "node": ">= 12.0.0"
  },
  "repository": "https://github.com/caio-ribeiro-pereira/selic",
  "bugs": {
    "url": "https://github.com/caio-ribeiro-pereira/selic/issues"
  },
  "keywords": [
    "rates",
    "brazilian-rates",
    "brazilian-utils",
    "selic",
    "cdi",
    "ipca",
    "financial"
  ],
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "eslint": "8.2.0",
    "eslint-plugin-jest": "25.2.4",
    "jest": "27.3.1",
    "jest-ts-webcompat-resolver": "1.0.0",
    "nock": "13.2.0",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "verbose": true,
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "resolver": "jest-ts-webcompat-resolver"
  }
}
